%header.page-title
	%h1=t('.edit_activity')	
	%a{:href => activity_path(@activity) , 'data-method': :delete, :rel => 'nofollow' , data: { confirm: t('del_confirm') }}	
		=t('.destroy')
		%i.fa.fa-times{:'aria-hidden' => "true"}	

.col-md-6.col-md-offset-3
	= render 'form'

.col-md-6.col-md-offset-3.activity_comments		
	.comments
		%header
			%h3=pluralize(@activity.comments.count, t('.comment'))
		%article#comments
			=render @activity.comments
	.new_comment
		%h4=t('.new_comment')
		= render 'comments/form'