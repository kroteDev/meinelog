%header.page-title
	%h1=t('.edit_activity')	
	%a{:href => activity_path(@activity) , 'data-method': :delete, :rel => 'nofollow' , data: { confirm: t('del_confirm') }}	
		=t('.destroy')
		%i.fa.fa-times{:'aria-hidden' => "true"}	

.col-md-6.col-md-offset-3
	= render 'form'

-if@comments
	alora
	.col-md-6.col-md-offset-3.comments
		-@comments.each do |comment|
			=comment.body

.col-md-6.col-md-offset-3.comments
	= link_to 'New Comment', new_activity_comment_path(@activity), :remote => true