= simple_form_for(@activity) do |f| 
  = f.error_notification 
  .form-group
    = f.input :title,:wrapper => false, input_html:{:class => 'form-control'}
  .form-group
    = f.input :description ,:wrapper => false, input_html:{:class => 'form-control'}
  .form-group.half_left
    = f.input :day, as: :string, :wrapper => false, input_html:{:class => 'form-control', :readonly =>"readonly"}
  .form-group.half_right.duration
    %label=t('.duration')    
    = f.input_field :duration, multiple: true, as: :string , :name => 'activity[duration(4i)]', :placeholder => '00'
    %b :    
    = f.input_field :duration, multiple: true, as: :string , :name => 'activity[duration(5i)]', :placeholder => '00'
    /= f.input :duration ,:wrapper => false, input_html:{:class => 'form-control'}
  .form-group
    = f.input :priority , collection: @prioridade,:wrapper => false, input_html:{:class => 'form-control'}, include_blank: false, include_hidden: false
  .form-group
    %label=t('.client_project')
    //= f.association :client, :label_method => 'nome' ,:wrapper => false, input_html:{:class => 'form-control'}
    //=f.collection_select :client, current_user.clients.all.order('nome ASC'), :id, :nome , :input_blank => true , :wrapper => false , class: 'form-control'
    =f.collection_select(:client_id, current_user.clients.all.order('nome ASC'), :id, :nome , {:input_blank => false} , {class: 'form-control'})
  .form-group
    = f.input :complete , :wrapper => false, input_html:{:class => 'form-control'}

  .form-actions
    = f.button :submit 
