= simple_form_for(@activity) do |f| 
  = f.error_notification 

  .form-inputs
    = f.input :title 
    = f.input :description 
    = f.input :day 
    = f.input :duration 
    = f.input :priority , collection: @prioridade
    = f.association :client, :label_method => 'nome' 
  

  .form-actions
    = f.button :submit 
