%nav.navbar.navbar-default
	.container
		.navbar-header
			%button{:type => 'button', :class => "navbar-toggle collapsed", :'data-toggle' => "collapse", :"data-target" => "#collapse-navbar"}
				%span.sr-only Toogle Navigation
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			- if current_user					
				.navbar-brand= link_to image_tag("/assets/logo_header"), activities_path, :title => 'Meine Log'		
			-else
				.navbar-brand= link_to image_tag("/assets/logo_header"), root_url, :title => 'Meine Log'
		#collapse-navbar.collapse.navbar-collapse
			%ul.nav.navbar-nav.navbar-right				
				-if current_user
					%li.dropdown
						%a{:href => "#", :class => "dropdown-toggle", :"data-toggle" => "dropdown", :role => "button", :"aria-haspopup" => true, :"aria-expanded" => false}
							=t('nav.clients')
							%span.caret
						%ul.dropdown-menu
							%li= link_to t('nav.new_client'), new_client_path
							%li= link_to t('nav.clients'), clients_path
					%li.dropdown
						%a{:href => "#", :class => "dropdown-toggle", :"data-toggle" => "dropdown", :role => "button", :"aria-haspopup" => true, :"aria-expanded" => false}
							=t('nav.activities')
							%span.caret
						%ul.dropdown-menu							
							%li= link_to t('nav.new_activity'), new_activity_path
							%li= link_to t('nav.activities'), activities_path
							%li= link_to t('nav.pendent_activities'), activities_url(:status => "f")
							%li= link_to t('nav.complete_activities'), activities_url(:status => "t")
					%li.dropdown
						%a{:href => "#", :class => "dropdown-toggle", :"data-toggle" => "dropdown", :role => "button", :"aria-haspopup" => true, :"aria-expanded" => false}
							=current_user.name
							%span.caret
						%ul.dropdown-menu.sair						
							%li= link_to t('nav.logout'), signout_path
				-else
					%li= link_to t("nav.sign_in_facebook"), "auth/facebook" 
					%li= link_to t("nav.sign_in_twitter"), "auth/twitter" 