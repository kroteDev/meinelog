!!!!!html
%html
	%head
		%title Meine Log 
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		%link{:type => "text/css", :rel => "stylesheet", :href => "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css"}
		= csrf_meta_tags
		=favicon_link_tag  "/assets/favicon/favicon" , rel: "shortcut icon" 
		=favicon_link_tag  "/assets/favicon/apple-icon-57x57.png" , rel: "apple-touch-icon" , sizes: "57x57" 
		=favicon_link_tag  "/assets/favicon/apple-icon-60x60.png" , rel: "apple-touch-icon" , sizes: "60x60" 
		=favicon_link_tag  "/assets/favicon/apple-icon-72x72.png" , rel: "apple-touch-icon" , sizes: "72x72" 
		=favicon_link_tag  "/assets/favicon/apple-icon-76x76.png" , rel: "apple-touch-icon" , sizes: "76x76" 
		=favicon_link_tag  "/assets/favicon/apple-icon-114x114.png" , rel: "apple-touch-icon" , sizes: "114x114" 
		=favicon_link_tag  "/assets/favicon/apple-icon-120x120.png" , rel: "apple-touch-icon" , sizes: "120x120" 
		=favicon_link_tag  "/assets/favicon/apple-icon-144x144.png" , rel: "apple-touch-icon" , sizes: "144x144" 
		=favicon_link_tag  "/assets/favicon/apple-icon-152x152.png" , rel: "apple-touch-icon" , sizes: "152x152" 
		=favicon_link_tag  "/assets/favicon/apple-icon-180x180.png" , rel: "apple-touch-icon" , sizes: "180x180" 
		=favicon_link_tag  "/assets/favicon/android-icon-192x192.png" , rel: "icon" , type: "image/png" , sizes: "192x192"  
		=favicon_link_tag  "/assets/favicon/favicon-32x32.png" , rel: "icon" , type: "image/png" , sizes: "32x32" 
		=favicon_link_tag  "/assets/favicon/favicon-96x96.png" , rel: "icon" , type: "image/png" , sizes: "96x96" 
		=favicon_link_tag  "/assets/favicon/favicon-16x16.png" , rel: "icon" , type: "image/png" , sizes: "16x16" 
		%meta{:name=>"viewport", :content=> "width=device-width, initial-scale=1.0"}/	
		:javascript
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
			ga('create', "#{Rails.application.secrets.google_analytics}", 'auto');
			ga('send', 'pageview');
	%body
		=render 'layouts/header'
		-if notice
			#notifications
				.notice= notice				
		- elsif alert
			#notifications
				.alert= alert
		.container-fluid.page-wrapper
			.row
				= yield
		=render 'layouts/footer'