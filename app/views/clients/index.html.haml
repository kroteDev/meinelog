%header.page-title
	%h1=t('.clients')
.clients_wrapper
	- @clients.each do |client|
		%li.client
			%figure
				= image_tag(client.logo.url(:medium))	
				%figcaption
					%h2=link_to client.nome, edit_client_path(client)
					.info
						%h3
							/=link_to "atividades", "activities?projeto=#{client.id}"
							=Activity.where(:client_id => client).count
							Atividade(s)
					
      
/= link_to t('.new_client'), new_client_path